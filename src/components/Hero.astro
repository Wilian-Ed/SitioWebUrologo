---
import { ShieldCheck } from 'lucide-astro';
---

<section id="doctor" class="hero">
    <div class="container hero-container">
        <div class="hero-content">
            <span class="section-subtitle">Sobre el Doctor</span>
            <h2 class="hero-title">Dr. Guillermo Antonio Ixquiac Pineda</h2>
            <p class="hero-text">
                Especializado en México y reconocido por la Universidad San Carlos de Guatemala. 
                Cuidado experto en urología general, pediátrica y oncológica.
                Recuperando su salud, inspirando vida.
            </p>
            <div class="hero-buttons">
                <a href="#contacto" class="btn btn-primary">Agendar Consulta</a>
                <a href="#servicios" class="btn btn-outline">Ver Servicios</a>
            </div>
            
            <div class="stats">
                <div class="stat-item">
                    <span class="stat-number">20+</span>
                    <span class="stat-label">Años de Experiencia</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">1000+</span>
                    <span class="stat-label">Pacientes Atendidos</span>
                </div>
            </div>
        </div>
        <div class="hero-image">
            <div class="image-wrapper">
                <!-- Placeholder for doctor image -->
                <img src="https://images.unsplash.com/photo-1622253692010-333f2da6031d?q=80&w=800&auto=format&fit=crop" alt="Doctor Urologo" class="main-img" />
                <div class="floating-card">
                    <div class="icon">
                        <ShieldCheck />
                    </div>
                    <div class="text">
                        <strong>Especialista Certificado</strong>
                        <span>Atención de Calidad</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        padding: 5rem 0;
        background: #f8fafc; /* Slightly darker than white to separate from Featured section */
        overflow: hidden;
    }

    .hero-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }

    .hero-title {
        font-size: 2.2rem;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        color: var(--color-secondary);
    }

    .hero-text {
        font-size: 1.1rem;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        color: var(--color-text-light);
        max-width: 500px;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
    }

    .btn-outline {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        border: 2px solid var(--color-secondary);
        color: var(--color-secondary);
        transition: all 0.3s;
    }

    .btn-outline:hover {
        background: var(--color-secondary);
        color: white;
    }

    .stats {
        display: flex;
        gap: 3rem;
        border-top: 1px solid #e2e8f0;
        padding-top: 2rem;
    }

    .stat-number {
        display: block;
        font-size: 2rem;
        font-weight: 800;
        color: var(--color-primary-dark);
        font-family: var(--font-heading);
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--color-text-light);
    }

    .image-wrapper {
        position: relative;
        border-radius: 20px;
    }

    .main-img {
        width: 100%;
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .floating-card {
        position: absolute;
        bottom: 30px;
        left: -20px;
        background: white;
        padding: 1rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 200px;
    }

    .floating-card .icon {
        color: var(--color-primary);
        display: flex;
        align-items: center;
    }

    @media (min-width: 992px) {
        .hero-container {
            grid-template-columns: 1fr 1fr;
        }
        
        .hero-title {
            font-size: 3rem;
        }
    }
</style>