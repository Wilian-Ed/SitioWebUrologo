---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { Calendar, User, Clock, BookOpen } from 'lucide-astro';

// Para el futuro: cuando haya contenido de blog, se puede importar desde archivos markdown
// import { getCollection } from 'astro:content';
// const blogPosts = await getCollection('blog');

// Posts de ejemplo - estos serán reemplazados por contenido real del doctor
const blogPosts = [
	{
		id: 'ejemplo-1',
		title: 'Bienvenido a nuestro blog',
		excerpt: 'Próximamente publicaremos artículos sobre salud urológica, prevención de enfermedades y novedades en tratamientos médicos.',
		date: '2024-01-15',
		author: 'Dr. Guillermo Ixquiac',
		readTime: '3 min',
		slug: '#',
		image: '/Dr%20Guillermo%20Ixquiac/blog-placeholder.jpg'
	}
];
---

<Layout 
	title="Blog | Dr. Guillermo Ixquiac"
	description="Artículos sobre salud urológica, prevención de enfermedades y novedades en tratamientos médicos del Dr. Guillermo Ixquiac."
	keywords="blog urología, salud masculina, prevención urológica, artículos médicos, Quetzaltenango"
>
	<Navbar />
	<main>
		<!-- Hero Section -->
		<section class="blog-hero">
			<div class="container">
				<span class="section-subtitle">Blog</span>
				<h1 class="hero-title">Información de Salud Urológica</h1>
				<p class="hero-text">
					Artículos, consejos y novedades sobre salud urológica escritos por el Dr. Ixquiac
				</p>
			</div>
		</section>

		<!-- Blog Posts -->
		<section class="blog-section">
			<div class="container">
				{blogPosts.length > 0 ? (
					<div class="blog-grid">
						{blogPosts.map((post) => (
							<article class="blog-card">
								<div class="blog-card-content">
									<div class="blog-meta">
										<span class="meta-item">
											<Calendar size={16} />
											{new Date(post.date).toLocaleDateString('es-GT', { year: 'numeric', month: 'long', day: 'numeric' })}
										</span>
										<span class="meta-item">
											<Clock size={16} />
											{post.readTime}
										</span>
									</div>
									<h2 class="blog-title">{post.title}</h2>
									<p class="blog-excerpt">{post.excerpt}</p>
									<div class="blog-footer">
										<div class="author">
											<User size={20} />
											<span>{post.author}</span>
										</div>
										<a href={post.slug} class="read-more">Leer más →</a>
									</div>
								</div>
							</article>
						))}
					</div>
				) : (
					<div class="no-posts">
						<BookOpen size={64} />
						<h2>Próximamente</h2>
						<p>Estamos preparando contenido valioso sobre salud urológica. Vuelve pronto.</p>
					</div>
				)}
			</div>
		</section>

		<!-- CTA Section -->
		<section class="cta-section">
			<div class="container">
				<div class="cta-content">
					<h2>¿Necesita Atención Urológica?</h2>
					<p>No espere más, programe su consulta hoy mismo</p>
					<div class="cta-buttons">
						<a href="/contacto" class="btn btn-primary">Agendar Consulta</a>
						<a href="/servicios" class="btn btn-outline">Ver Servicios</a>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.blog-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
		padding: 6rem 0 4rem;
		text-align: center;
		color: white;
	}

	.blog-hero .section-subtitle {
		color: white;
		opacity: 0.9;
	}

	.hero-title {
		font-size: 2.5rem;
		color: white;
		margin-bottom: 1rem;
	}

	.hero-text {
		font-size: 1.15rem;
		max-width: 700px;
		margin: 0 auto;
		opacity: 0.95;
		line-height: 1.6;
		color: white;
	}

	.blog-section {
		padding: 5rem 0;
		background: white;
		min-height: 400px;
	}

	.blog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.blog-card {
		background: var(--color-bg-light);
		border-radius: 16px;
		overflow: hidden;
		transition: all 0.3s;
		border: 2px solid transparent;
	}

	.blog-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(0,0,0,0.1);
		border-color: var(--color-primary);
		background: white;
	}

	.blog-card-content {
		padding: 2rem;
	}

	.blog-meta {
		display: flex;
		gap: 1rem;
		margin-bottom: 1rem;
		flex-wrap: wrap;
	}

	.meta-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.9rem;
		color: var(--color-text-light);
	}

	.blog-title {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--color-secondary);
		line-height: 1.3;
	}

	.blog-excerpt {
		margin-bottom: 1.5rem;
		line-height: 1.6;
		color: var(--color-text);
	}

	.blog-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 1rem;
		border-top: 1px solid #e2e8f0;
	}

	.author {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-text-light);
		font-size: 0.9rem;
	}

	.read-more {
		color: var(--color-primary);
		font-weight: 600;
		text-decoration: none;
		transition: transform 0.3s;
	}

	.read-more:hover {
		transform: translateX(5px);
	}

	.no-posts {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--color-text-light);
	}

	.no-posts svg {
		color: var(--color-primary);
		margin-bottom: 1rem;
	}

	.no-posts h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
		color: var(--color-secondary);
	}

	.cta-section {
		padding: 5rem 0;
		background: var(--color-secondary);
		color: white;
		text-align: center;
	}

	.cta-content h2 {
		font-size: 2.5rem;
		color: white;
		margin-bottom: 1rem;
	}

	.cta-content p {
		font-size: 1.15rem;
		margin-bottom: 2rem;
		color: rgba(255,255,255,0.9);
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn-outline {
		padding: 0.75rem 1.5rem;
		border-radius: 50px;
		font-weight: 600;
		text-decoration: none;
		border: 2px solid white;
		color: white;
		transition: all 0.3s;
	}

	.btn-outline:hover {
		background: white;
		color: var(--color-secondary);
	}

	@media (min-width: 768px) {
		.hero-title {
			font-size: 3.5rem;
		}
	}

	@media (max-width: 400px) {
		.blog-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
