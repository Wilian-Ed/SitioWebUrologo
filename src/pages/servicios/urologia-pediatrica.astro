	}

	.content-text p {
		font-size: 1.05rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: var(--color-text);
	}

	.procedure-img {
		width: 100%;
		border-radius: 24px;
		box-shadow: 0 20px 60px rgba(0,0,0,0.15);
	}

