	}

	.highlight-box.alert .btn:hover {
		background: rgba(255,255,255,0.9);
	}

	.benefits {
		padding: 5rem 0;
		background: #f8fafc;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 2.5rem;
		color: var(--color-secondary);
	}

